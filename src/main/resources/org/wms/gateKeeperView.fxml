      <ComboBox fx:id="table_quality" editable="true" layoutX="394.0" layoutY="237.0" prefHeight="27.0" prefWidth="103.0" promptText="Quality" style="-fx-background-color: fff;" />
      <ComboBox fx:id="table_quantity" editable="true" layoutX="394.0" layoutY="282.0" prefHeight="27.0" prefWidth="103.0" promptText="Quantity" style="-fx-background-color: fff;" />
